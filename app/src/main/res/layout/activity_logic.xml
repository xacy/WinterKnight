<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="endingloop.org.winterknight.LogicActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Resuelve el problema:"
            android:textColor="#707070"
            android:textSize="32sp"
            android:fontFamily="sans-serif"
            android:padding="15sp"
            android:id="@+id/explainationLogic" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Ha ocurrido un error..."
            android:textColor="#707070"
            android:textSize="28sp"
            android:fontFamily="sans-serif"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:id="@+id/logicProblem" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:hint="Resolver.."
            android:id="@+id/answerLogic" />
        <Button
            android:id="@+id/answer_button_logic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="Resolver"/>
    </LinearLayout>
</RelativeLayout>

